@model ProjeYonetim.Models.Modul
@{
    ViewData["Title"] = "Modül Ekle";
}

<div style="height:100px"></div>

<div class="container">
<form method="post" action="/Admin/AddModul">

  <input class="form-control" type="hidden" name="ProjeId" value='@ViewContext.RouteData.Values["projeid"]'>
  
  <div class="form-group">
    <label>Adı</label>
    @Html.TextBoxFor(m=>m.Adi,new {@class="form-control"})
  </div>
  <div class="form-group">
    <label>Sıra</label>
    @Html.TextBoxFor(m=>m.Sira,new {@class="form-control"})
  </div>
  <div class="form-group">
    <label>Aktif</label>
    @Html.CheckBoxFor(m=>m.Active,new {@class="form-control"})
  </div>
  <div class="form-group">
    <label>Site Linki</label>
    @Html.TextBoxFor(m=>m.DemoLink,new {@class="form-control"})
  </div>
  <div class="form-group">
    <label>Fontawesome Html</label>
    @Html.TextBoxFor(m=>m.Fontawesome,new {@class="form-control"})
  </div>

  <div class="d-flex justify-content-between">
  <a asp-controller="Admin" asp-action="Modul" asp-route-projeid='@ViewContext.RouteData.Values["projeid"]' class="btn btn-secondary">Geri Dön</a> 
  <button type="submit" class="btn btn-success">Kaydet</button>
  </div>

</form>

</div>