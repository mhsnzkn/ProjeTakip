@model ProjeYonetim.Models.Rapor
@{
    ViewData["Title"] = "Modül Ekle";
}

<div style="height:100px"></div>

<div class="container">
<form method="post" enctype="multipart/form-data" action="/Admin/EditRapor">

  <input class="form-control" type="hidden" name="ProjeId" value='@Model.ProjeId'>
  <input class="form-control" type="hidden" name="ModulId" value='@Model.ModulId'>
  <input class="form-control" type="hidden" name="RaporTurId" value='@Model.RaporTurId'>
  <input class="form-control" type="hidden" name="Id" value='@Model.Id'>
  
  <div class="form-group">
    <label>Adı</label>
    @Html.TextBoxFor(m=>m.Adi,new {@class="form-control"})
  </div>
  <div class="form-group">
    <label>Sıra</label>
    @Html.TextBoxFor(m=>m.Sira,new {@class="form-control"})
  </div>
  <div class="form-group">
    <label>Dosya Adı</label>
    @Html.TextBoxFor(m=>m.Aciklama,new {@class="form-control",@readonly=true})
  </div>
  <div class="form-group">
    <label>Aktif</label>
    @Html.CheckBoxFor(m=>m.Active,new {@class="form-control"})
  </div>
  <div class="form-group">
    <label>Tarih</label>
    <input type="date" class="form-control" id="Tarih" name="Tarih" value='@Model.Tarih.ToString("yyyy-MM-dd")'>
  </div>
  <div class="form-group">
    <label>Dosya</label>
    <input type="file" class="form-control" name="file">
  </div>

  <div class="d-flex justify-content-between">
  <a asp-controller="Admin" asp-action="Raporlar" asp-route-projeid='@ViewContext.RouteData.Values["projeid"]' asp-route-modulid='@ViewContext.RouteData.Values["modulid"]'
  asp-route-raporturuid='@ViewContext.RouteData.Values["raporturuid"]' class="btn btn-secondary">Geri Dön</a> 
  <button type="submit" class="btn btn-success">Kaydet</button>
  </div>

</form>

</div>